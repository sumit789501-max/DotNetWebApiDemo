@model Cred.Models.PreviousEmployment
@{
    ViewData["Title"] = "Delete Employment";
}

<div class="container mt-4">
    <h2>Delete Employment Record</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this employment record?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee:</dt>
                <dd class="col-sm-9">@Model.Employee.Name</dd>

                <dt class="col-sm-3">Company:</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>

                <dt class="col-sm-3">Job Title:</dt>
                <dd class="col-sm-9">@Model.JobTitle</dd>

                <dt class="col-sm-3">From Date:</dt>
                <dd class="col-sm-9">@Model.FromDate.ToString("M/d/yyyy")</dd>

                <dt class="col-sm-3">To Date:</dt>
                <dd class="col-sm-9">@(Model.ToDate?.ToString("M/d/yyyy") ?? "Present")</dd>
            </dl>
        </div>
    </div>

    <form method="post" action="/PreviousEmployment/Delete/@Model.Id">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
            <a href="/PreviousEmployment" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
