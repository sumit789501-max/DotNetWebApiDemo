@model Cred.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this employee?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee No:</dt>
                <dd class="col-sm-9">@Model.EmployeeNo</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Date of Birth:</dt>
                <dd class="col-sm-9">@Model.DOB.ToString("M/d/yyyy")</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Place of Birth:</dt>
                <dd class="col-sm-9">@Model.PlaceOfBirth</dd>
            </dl>
        </div>
    </div>

    <form method="post" action="/Employees/Delete/@Model.Id">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
            <a href="/Employees" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
