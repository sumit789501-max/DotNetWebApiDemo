@model Cred.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this employee?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeNo)</dt>
    <dd class="col-sm-10">@Model.EmployeeNo</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DOB)</dt>
    <dd class="col-sm-10">@Model.DOB.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Address)</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PlaceOfBirth)</dt>
    <dd class="col-sm-10">@Model.PlaceOfBirth</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
